/************************CALENDAR**********************/

    $(document).ready(function() {
        $("#calendar").fullCalendar({
            /*********CALENDAR HEADERS*********/
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'month,agendaWeek,agendaDay'
            },
                editable: true,
                navLinks: true,
                selectable: true,
                eventLimit: true,
                selectMirror: true,
                events: events,
                allDaySlot: false,
                selectHelper: true,
            
 /*when i click on the full calendar day click the jquery timepicker will be shown*/
 // on day click the timepicker will render and the time will be set to the timepicker input

            /*when i click on the full calendar day click the jquery timepicker will be shown*/
        
        dayClick: function(date, jsEvent, view) {
            if(view.name == 'month' || view.name == 'agendaWeek') {
            $('#calendar').fullCalendar('changeView', 'agendaDay');
            $('#calendar').fullCalendar('gotoDate', date);      
            }
            let justtheday = moment(date).format('YYYY-MM-DD');
            let justthetime = moment(date).format('HH:mm:ss');
            $("#appointmentdate").val(justtheday);
            $("#time").val(justthetime);
        },
   
        eventClick: function(calEvent, jsEvent, view) {
               
        alert('Clicked on: ' + calEvent.title + '  Sorry Madeleine is unavailable during this time please select another time slot ');
        
    
       }
    
    }); 

/*************************END OF CALENDAR*******************/
/****************************ADD *********************/

            $("#add").on("click", function () {
            let firstname = $('input[name=firstname]').val()
            let lastname = $("input[name=lastname]").val()
            let email = $("input[name=email]").val()
            let service = $("input[name=service]").val()
            let telephone = $("input[name=telephone]").val()
            let appointmentdate = $("input[name=appointmentdate]").val()
            let time = $("input[name=time]").val()
            let appointmentdateTime = moment(appointmentdate+"T"+time, "YYYY-MM-DDTHH:mm").format("YYYY-MM-DDTHH:mm:ss");
            $.ajax({
                type: "POST",
                url: '/useradded/',
                dataType: 'json',
                data: JSON.stringify({
                    'firstname': firstname,
                    'lastname': lastname,
                    'email': email,
                    'service': service,
                    'telephone': telephone,
                    'appointmentdate': appointmentdate,
                    'time': appointmentdateTime,
                    
                }),
                success: getUsers
            });
            events.push({
                title: service,
                date: appointmentdate,
                allDay: true,     
                });
            $("#calendar").fullCalendar("renderEvent", events[events.length - 1], true);
            });

    });

/**************************SELECT TIME *********************/


